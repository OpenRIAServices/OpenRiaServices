<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="clr-namespace:OpenRiaServices.Controls" 
    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows">
    <Style TargetType="ctl:DomainDataSource">
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="AutoLoad" Value="True" />
        <Setter Property="LoadDelay" Value="0:0:0.75" />
        <Setter Property="LoadInterval" Value="0:0:2" />
    </Style>
</ResourceDictionary>
